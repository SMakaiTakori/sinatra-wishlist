<h2> Edit Your Wishlist Below: </h2>

<form action="/wishlists/<%=@wishlist.id%>" method="post">
    <input type="hidden" name="_method" value= "patch">

    <label> Wishlist Name: </label>
        <input type= "text" name= "wishlist[name]" value= "<%=@wishlist.name%>"><br><br>
    <label> Item 1: </label>
        <input type= "text" name= "items[][quantity]" value = "<%=@items[0]["quantity"]%>">
        <input type= "text" name= "items[][name]" value = "<%=@items[0]["name"]%>"><br><br>
    <label> Item 2: </label>
        <input type= "text" name= "items[][quantity]" value = "<%=@items[1]["quantity"]%>">
        <input type= "text" name= "items[][name]" value = "<%=@items[1]["name"]%>"><br><br>            
    <button> Edit! </button>
</form>